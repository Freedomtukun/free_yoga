# 服务器配置
PORT=5000
NODE_ENV=development

# MongoDB配置
MONGO_URI=mongodb://localhost:27017/smartyoga_dev

# JWT配置
JWT_SECRET=dev_secret_key_change_in_production
JWT_EXPIRES_IN=7d

# 跨域设置
CORS_ORIGIN=http://localhost:3000

# 日志级别
LOG_LEVEL=debug

# API前缀
API_PREFIX=/api

# 媒体文件路径
UPLOADS_FOLDER=uploads
MAX_FILE_SIZE=5000000 # 5MB

# 瑜伽姿势分析设置
POSE_ACCURACY_THRESHOLD=70
POSE_CONFIDENCE_THRESHOLD=0.5

# 前端URL（用于邮件链接等）
FRONTEND_URL=http://localhost:3000

# 缓存设置
CACHE_ENABLED=false