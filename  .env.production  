# 服务器配置
PORT=5000
NODE_ENV=production

# MongoDB配置
MONGO_URI=mongodb://mongodb:27017/smartyoga_prod

# JWT配置
JWT_SECRET=your_secure_production_secret_key_replace_this
JWT_EXPIRES_IN=30d

# 跨域设置
CORS_ORIGIN=https://你的域名.com

# 日志级别
LOG_LEVEL=error

# API前缀
API_PREFIX=/api

# 媒体文件路径
UPLOADS_FOLDER=uploads
MAX_FILE_SIZE=5000000 # 5MB

# 瑜伽姿势分析设置
POSE_ACCURACY_THRESHOLD=70
POSE_CONFIDENCE_THRESHOLD=0.6

# 前端URL（用于邮件链接等）
FRONTEND_URL=https://你的域名.com

# 缓存设置
CACHE_ENABLED=true
CACHE_TTL=3600 # 1小时

# 中国优化设置
CN_OPTIMIZATION=true
RATE_LIMIT_WINDOW_MS=60000 # 1分钟窗口
RATE_LIMIT_MAX=100 # 每个IP每分钟最多100个请求

# TLS/SSL设置
USE_HTTPS=true
SSL_KEY_PATH=/etc/ssl/private/your-private-key.pem
SSL_CERT_PATH=/etc/ssl/certs/your-certificate.pem